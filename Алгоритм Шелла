#include <iostream>
#include <ctime> 
#include <cstdlib> 
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	srand(time(NULL));
	const int n = 8; // Количество элементов
	int list[n] = { 0 }; // Инициализация массива
	for (int i = 0; i < n; i++) { // Заполнение
		list[i] = rand() % 201 - 100; // Заполнение числами от -100 до 100
	}
	cout << "Начальный массив: ";
	for (int i = 0; i < n; i++) { // Вывод неотсортированного массива
		cout << list[i] << " ";
	}
	cout << endl;

	// Алгоритм Шелла
	int step = n / 2; // Условное деление массива на части

	while (step > 0) {
		for (int i = 0; i < n - step; i++) { 
			for (int j = i; j > 0 && list[j - 1] > list[j]; j--) { // Сортировка вставками
				int t = list[j - 1];
				list[j - 1] = list[j];
				list[j] = t;
			}
		}
		step = step / 2; 
	}

	cout << "Конечный массив: ";
	for (int i = 0; i < n; i++) { // Вывод отсортированного массива
		cout << list[i] << " ";
	}
}
